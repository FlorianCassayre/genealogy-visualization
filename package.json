{
  "name": "genealogy-visualization",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "npx prettier src --check",
    "prettier:fix": "npm run prettier -- --write",
    "preview": "vite preview",
    "update:gramps": "if cd genealogy; then git pull; else git clone git@github.com:cassayre/genealogy.git genealogy; fi",
    "update:gedcom": "gramps -i genealogy/genealogy.gramps -e genealogy.ged -f ged && sed 's/(^[0-9]+ SURN .*|\\/.+\\/)$/\\U&\\E/' -r -i genealogy.ged",
    "update:compile": "tsx src/scripts/compile.ts"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@fontsource/inter": "^5.2.6",
    "@mui/icons-material": "^7.1.1",
    "@mui/joy": "^5.0.0-beta.45",
    "@mui/material": "^7.1.1",
    "d3-scale-chromatic": "^3.1.0",
    "radash": "^12.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-query": "^3.39.3"
  },
  "devDependencies": {
    "@types/d3-scale-chromatic": "^3.1.0",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "@vitejs/plugin-react": "^4.5.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "prettier": "^3.5.3",
    "read-gedcom": "^0.3.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  }
}
