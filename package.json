{
  "name": "genealogy-visualization",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "npx prettier src --check",
    "prettier:fix": "npm run prettier -- --write",
    "preview": "vite preview",
    "update:gramps": "if cd genealogy; then git pull; else git clone git@github.com:cassayre/genealogy.git genealogy; fi",
    "update:gedcom": "gramps -i genealogy/genealogy.gramps -e genealogy.ged -f ged && sed 's/(^[0-9]+ SURN .*|\\/.+\\/)$/\\U&\\E/' -r -i genealogy.ged",
    "update:compile": "tsx src/scripts/compile.ts",
    "update:heraldry": "tsx src/scripts/download-heraldry.ts"
  },
  "dependencies": {
    "@emotion/react": "11.14.0",
    "@emotion/styled": "11.14.1",
    "@fontsource/inter": "5.2.8",
    "@mui/icons-material": "7.3.7",
    "@mui/joy": "5.0.0-beta.52",
    "@mui/material": "7.3.7",
    "@svg-maps/france.departments": "2.0.0",
    "@tanstack/react-query": "5.90.20",
    "d3-scale-chromatic": "3.1.0",
    "radash": "12.1.1",
    "react": "19.2.4",
    "react-dom": "19.2.4"
  },
  "devDependencies": {
    "@types/d3-scale-chromatic": "3.1.0",
    "@types/node": "25.2.0",
    "@types/react": "19.2.10",
    "@types/react-dom": "19.2.3",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@typescript-eslint/parser": "8.54.0",
    "@vitejs/plugin-react": "5.1.2",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-react-refresh": "0.5.0",
    "prettier": "3.8.1",
    "read-gedcom": "0.3.2",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vite": "7.3.1"
  }
}
